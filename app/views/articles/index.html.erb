<h1>My Articles page</h1>

      <% @articles.each do |article| %>
          <%= link_to article.title, article_path(article) %> <%= link_to "Delete #{article.title}",
                  article_path(article),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
      <% end %>

<h3><%= link_to 'Add a new article', new_path %></h3>
